---
import { site } from '@data/site'
import Footer from '@components/layout/Footer.astro'
import Header from '@components/layout/Header.astro'

import "@styles/global.css"
import "@styles/animations.css"

interface Props {
    title?: string
}

const {title="Astro landing"} = Astro.props
---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="keywords" content="barber shop" />
		<meta name="author" content="nombre del dueño" />
		<meta name="description" content="Barbería premium en Ciudad de México. Cortes modernos, fade profesional y cuidado de barba. Agenda fácil por WhatsApp." />
		<meta name="robots" content="index, follow">
		<title>{title}</title>
	</head>
	<body class="flex flex-col min-h-screen font-sans antialiased">
		<Header />
		<main id="main" class="grow">
			<slot />
		</main>
		<Footer />
	</body>
</html>