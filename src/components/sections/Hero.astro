---
import Badge from "@components/ui/Badge.astro";
import LinkButton from "@components/ui/LinkButton.astro";
import { site } from "@data/site";
---

<section
  id="inicio"
  class="relative min-h-screen flex items-center pt-20 overflow-hidden"
  style="background-color: var(--color-bg-primary);"
>
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-black/60 md:hidden z-10"></div>
    
    <div class="hidden md:block absolute inset-0 bg-linear-to-r from-(--color-bg-primary) via-(--color-bg-primary)/45 to-transparent z-10"></div>
    
    <img
      src="/images/hero.webp"
      alt="Barbería premium"
      class="h-full w-full object-cover object-[75%] md:object-right transition-transform duration-[10s] hover:scale-110 mask-b-from-45% mask-b-to-90%"
    />
  </div>

  <div class="container relative z-20 px-6 mx-auto">
    <div class="max-w-4xl mx-auto md:mx-0 text-center md:text-left">
      
      <div class="flex justify-center md:justify-start">
        <Badge text="Desde 2010 • Experiencia Premium" />
      </div>

      <h1
        class="mt-6 text-5xl sm:text-6xl md:text-7xl lg:text-8xl font-normal font-sancreek leading-[0.9] tracking-tight text-(--color-text-primary)"
      >
        {site.hero.title.split(' ').map((word, i) => (
          <span class={i === 1 ? "text-(--color-accent) block md:inline lg:block" : "block"}>
            {word}
          </span>
        ))}
      </h1>

      <div class="mt-8 flex flex-col md:flex-row items-center md:items-start gap-4">
        <span class="hidden md:block w-12 h-px bg-(--color-accent) mt-4"></span>
        <p class="text-base sm:text-lg md:text-xl max-w-xl leading-relaxed italic text-(--color-text-muted)">
          {site.hero.subtitle}
        </p>
      </div>

      <div class="mt-10 flex flex-col sm:flex-row items-center justify-center md:justify-start gap-4">
        {site.hero.actions.map(action => (
          <LinkButton 
            href={action.link} 
            variant={action.variant} 
            class="w-full sm:w-auto px-8 py-4 uppercase tracking-widest text-[10px] font-bold"
          >
            {action.label}
          </LinkButton>
        ))}
      </div>
    </div>
  </div>

  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 hidden sm:flex flex-col items-center gap-2 opacity-85">
    <span class="text-[9px] uppercase tracking-[0.4em] text-(--color-text-primary)">Scroll</span>
    <div class="w-px h-10 bg-linear-to-b from-(--color-accent) to-transparent"></div>
  </div>
</section>

<style>
  h1 span {
    animation: reveal 0.8s cubic-bezier(0.77, 0, 0.175, 1) forwards;
    opacity: 0;
    transform: translateY(20px);
  }
  
  h1 span:nth-child(2) { animation-delay: 0.1s; }
  h1 span:nth-child(3) { animation-delay: 0.2s; }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  img {
    transition: transform 10s linear;
  }
  
  section:hover img {
    transform: scale(1.1);
  }
</style>