---
import { site } from "../../data/site";
---

<section
  id="prueba-social"
  class="py-16 md:py-20 text-center px-6"
  style="background-color: var(--bg-muted)"
>
  <!-- Rating -->
  <p class="text-lg font-medium">
    ⭐ {site.socialProof.rating} de 5
    <span
      class="text-sm font-normal ml-2"
      style="color: var(--text-muted)"
    >
      basado en más de {site.socialProof.reviews} reseñas
    </span>
  </p>

  <!-- Highlight -->
  <p
    class="mt-3 text-sm"
    style="color: var(--text-muted)"
  >
    {site.socialProof.highlight}
  </p>

  <!-- Testimonials -->
  <div
    class="mt-10 grid md:grid-cols-3 gap-6 max-w-5xl mx-auto"
    data-stagger
  >
    {site.testimonials?.map((testimonial) => (
      <div
        class="rounded-xl border p-6 text-sm"
        style="border-color: var(--border-color)"
      >
        “{testimonial}”
      </div>
    ))}
  </div>
</section>
