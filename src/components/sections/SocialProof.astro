---
import { site } from "../../data/site";
const reviews = [
  {
    name: "Carlos Mendoza",
    date: "Hace 2 semanas",
    text: "La mejor experiencia de barbería en Ecatepec. El ritual de toalla caliente es de otro nivel. Salí sintiéndome como un hombre nuevo.",
    rating: 5,
    style: "Corte Clásico + Barba"
  },
  {
    name: "Ricardo Silva",
    date: "Hace 1 mes",
    text: "Puntualidad y maestría. Julián tiene una mano increíble para la navaja. El ambiente es relajado y muy profesional. 100% recomendado.",
    rating: 5,
    style: "Low Fade"
  },
  {
    name: "Alejandro G.",
    date: "Hace 3 días",
    text: "Buscaba un lugar que entendiera el estilo vintage y aquí lo encontré. El detalle que ponen en cada recorte es impresionante.",
    rating: 5,
    style: "Slick Back"
  }
];
---

<section id="testimonios" class="py-24 bg-(--color-bg-primary) relative overflow-hidden">
  <div class="absolute top-0 right-10 text-[300px] font-serif text-(--color-accent) opacity-5 leading-none select-none">
    &rdquo;
  </div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center mb-16">
      <span class="text-(--color-accent) uppercase tracking-[0.4em] text-xs font-bold">Opiniones</span>
      <h2 class="text-5xl md:text-6xl font-sancreek text-(--color-text-primary) mt-4">Palabra de Caballero</h2>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      {reviews.map((review) => (
        <div class="bg-(--color-bg-surface)/10 p-8 border border-white/5 relative group hover:border-(--color-accent)/30 transition-all duration-500">
          
          <div class="flex gap-1 mb-6">
            {[...Array(review.rating)].map(() => (
              <svg class="size-4 text-(--color-accent)" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <p class="text-(--color-text-primary) italic mb-8 leading-relaxed">
            "{review.text}"
          </p>

          <div class="flex items-center justify-between mt-auto">
            <div>
              <h4 class="text-(--color-text-primary) font-bold text-sm uppercase tracking-widest">{review.name}</h4>
              <p class="text-(--color-accent) text-[10px] uppercase font-semibold mt-1">{review.style}</p>
            </div>
            <span class="text-(--color-text-muted) text-[10px]">{review.date}</span>
          </div>

          <div class="absolute top-0 right-0 w-8 h-8 border-t border-r border-transparent group-hover:border-(--color-accent)/40 transition-all"></div>
        </div>
      ))}
    </div>

    <div class="mt-20 grid grid-cols-2 md:grid-cols-4 gap-8 border-t border-white/10 pt-12">
      <div class="text-center">
        <span class="block text-3xl font-sancreek text-(--color-text-primary)">5.0</span>
        <span class="text-[10px] uppercase tracking-widest text-(--color-accent)">Rating Google</span>
      </div>
      <div class="text-center">
        <span class="block text-3xl font-sancreek text-(--color-text-primary)">2k+</span>
        <span class="text-[10px] uppercase tracking-widest text-(--color-accent)">Cortes Realizados</span>
      </div>
      <div class="text-center">
        <span class="block text-3xl font-sancreek text-(--color-text-primary)">100%</span>
        <span class="text-[10px] uppercase tracking-widest text-(--color-accent)">Satisfacción</span>
      </div>
      <div class="text-center">
        <span class="block text-3xl font-sancreek text-(--color-text-primary)">15</span>
        <span class="text-[10px] uppercase tracking-widest text-(--color-accent)">Años de Legado</span>
      </div>
    </div>
  </div>
</section>