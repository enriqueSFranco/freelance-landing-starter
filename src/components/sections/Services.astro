---
import Card from "@components/ui/Card.astro";
import { site } from "@data/site";
---

<section id="servicios" class="py-16 md:py-20 text-center px-6">
  <div class="max-w-3xl mx-auto text-center mb-16">
    <h2 class="text-3xl md:text-4xl font-semibold capitalize tracking-tight">
      servicios
    </h2>
    <p style="color: var(--text-muted)" class="mt-4 text-lg">
      Todo lo que necesitas para verte bien, hecho con precisi√≥n.
    </p>
  </div>

  <!-- grid -->
  <div class="grid md:grid-cols-3" data-stagger>
    {
      site.services.map(({ title, description, price }) => (
        <Card>
          <div class="card-hover h-full flex flex-col">
            <h3 class="text-lg font-medium">{title}</h3>

            <p
              class="mt-3 text-sm leading-relaxed"
              style="color: var(--text-muted);"
            >
              {description}
            </p>
          </div>
        </Card>
      ))
    }
  </div>
</section>
