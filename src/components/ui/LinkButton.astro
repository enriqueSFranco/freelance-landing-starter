---
import type { HTMLAttributes } from "astro/types";

type Variant = "primary" | "secondary" | "ghost";
type Size = "sm" | "md" | "lg";

interface Props extends HTMLAttributes<"a"> {
  href: string;
  variant?: Variant;
  size?: Size;
}

const { href, variant = "primary", size = "sm" } = Astro.props;

const base =
  "inline-flex items-center justify-center rounded-full font-medium transition focus:outline-none focus-visible:ring-2 focus-visible:ring-offset-2";

const variants: Record<Variant, string> = {
  primary:
    "bg-(--brand-accent) text-white hover:opacity-90 focus-visible:ring-(--brand-accent)",
  secondary:
    "border border-gray-300 text-gray-900 hover:bg-gray-100 focus-visible:ring-gray-400",
  ghost: "text-gray-900 hover:bg-gray-100 focus-visible:ring-gray-400",
};

const sizes: Record<Size, string> = {
  sm: "px-4 py-2 text-sm",
  md: "px-6 py-3 text-sm",
  lg: "px-8 py-4 text-base",
};
---

<a target="_blank" rel="external" href={href} class:list={[base, variants[variant], sizes[size]]}>
  <slot />
</a>
